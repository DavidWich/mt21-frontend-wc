{
  "scripts": {
    "init:npm": "lerna bootstrap --npm-client=npm",
    "build:npm": "lerna run --npm-client=npm build",
    "start:npm": "lerna run --parallel --npm-client=npm start",
    "init:yarn": "lerna bootstrap --npm-client=yarn",
    "build:yarn": "lerna run --npm-client=yarn build",
    "start:yarn": "lerna run --parallel --npm-client=yarn start",
    "cleanup": "lerna clean"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
